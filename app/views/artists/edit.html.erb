<h1>Editing artist</h1>

<% form_for(@artist) do |f| %>
  <%= f.error_messages %>
  <p>
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </p>
  <p>
    <%= f.label :url %><br />
    <%= f.text_field :url %>
  </p>
  <p>
    <%= f.label :image_url, "Artist Photo URL" %><br />
    <%= f.text_field :image_url %>
  </p>
  <p>
    <%= f.label :listeners %><br />
    <%= f.text_field :listeners %>
  </p>
  <p>
    <%= f.label :mb_id, "Musicbrainz ID" %><br />
    <%= f.text_field :mb_id %>
  </p>
  <p>
    <%= f.submit 'Update' %>
  </p>
<% end %>

<%= link_to 'Show', @artist %> |
<%= link_to 'Back', artists_path %>