<form>
<%
map = {}; 
%w{ title year director rating synopsis tagline length }.each do |name|
	imdb_attribute = name
	record_id = "movie_#{name}"
	title = name.capitalize
	
	case name
		when 'director'
			value = @imdb_movie.director.join(", ").gsub(/[^A-Za-z0-9'", ]/, '')
		when 'synopsis'
			imdb_attribute = 'plot'
		when 'rating'
			record_id = "movie_imdbrating"
	end
	value ||= @imdb_movie.send imdb_attribute
	map[record_id] = value
	
	%>	
<p>
	<%= link_to_function('copy', nil, :class => "ss_sprite ss_arrow_left") do |page|
		page[record_id].value = value
		page[record_id].visual_effect :highlight
	end %> 
	<strong><%=h title %></strong>
	<%=h value %>
</p>
<% end %>
<p>
	<%= link_to_function('Copy All', nil, :class => "ss_sprite ss_arrow_left") do |page|
		map.each do |record_id, value|
			page[record_id].value = value
			page[record_id].visual_effect :highlight
		end
	end %>
	<br/>
	<br/>
	
	Copy the data to the movie by clicking copy beside the individual attributes, or click the copy all button above. After the data is satisfactory, click the <%= link_to_function('update button', nil) do |page| page['movie_submit'].visual_effect :highlight end %>.
</p>
</form>