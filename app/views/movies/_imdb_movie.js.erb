<form>
<%
map = {}; 
%w{ title year director rating synopsis tagline length imdbid}.each do |name|
	imdb_attribute = name
	record_id = "movie_#{name}"
	title = name.capitalize
	
	case name
		when 'director'
			value = @imdb_movie.director.join(", ").gsub(/[^A-Za-z0-9'", ]/, '')
		when 'synopsis'
			imdb_attribute = 'plot'
		when 'rating'
			record_id = "movie_imdbrating"
		when 'imdbid'
			title = "IMDB ID"
			imdb_attribute = 'id'
	end
	value ||= @imdb_movie.send imdb_attribute
	map[record_id] = value
	
	%>	
<p>
	<%= link_to('copy', '#', :class => "imdbcopy ss_sprite ss_arrow_left", :movie_attr => record_id, :movie_value => value) %>
	<strong><%=h title %></strong>
	<%=h value %>
</p>
<% end %>
<p>
	<%= link_to('Copy All', '#', :class => "ss_sprite ss_arrow_left imdbcopyall") %>
	<br/>
	<br/>
	
	Copy the data to the movie by clicking copy beside the individual attributes, or click the copy all button above. After the data is satisfactory, click the update button.
</p>
</form>