<div class="peg span-12">
 <h3><%=h album.name %> <span class="subtitle">By <%= link_to album.artist.name, album.artist %></span></h3>
	<div class="span-3">
	<%= image_tag(album.image_url, :class => "span-3", :alt => "album art") if album.image_url %>
	</div>
	<div class="span-9 last">
	<%=	"<strong>Released</strong>: #{album.release_date}<br/>" if album.release_date %>
	<%=	"<strong>Last.FM listeners</strong>: #{album.listeners}" if album.listeners %>
	<table class="tracklisting">
		<tr>
			<th width="20px">#</th>
			<th width="300px">Track</th>
			<th>Duration</th>
		<tr>
		<% album.tracks[0..5].each do |t| %>
		<tr>
			<td><%=h t.position %>
			<td><%=h t.name %></td>
			<td><%=h clock_from_ms(t.duration) if t.duration %></td>
		</tr>
		<% end %>
	</table>
	</div>
</div>



