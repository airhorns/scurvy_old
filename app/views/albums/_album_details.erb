<div class="spethial span-10 last">
	<h2><%=h boxtitle ||= "Album Details"%></h2>
	<div class="span-7 last">
		<h3><%=h album.name %> <span class="subtitle">By <%= link_to album.artist.name, album.artist %></span></h3>
		<table>
			<tr>
				<td>Released:</td>
				<td><%=h album.release_date %></td>
			</tr>
			<tr>
				<td>Last.FM Listeners:</td>
				<td><%=h album.listeners %></td>
			</tr>
		</table>
		<table class="tracklisting">
			<tr>
				<th width="20px">#</th>
				<th>Track</th>
				<th>Duration</th>
			<tr>
			<% album.tracks.each do |t| %>
			<tr>
				<td><%=h t.position %>
				<td><%=h t.name %></td>
				<td><%=h clock_from_ms(t.duration) if t.duration %></td>
			</tr>
			<% end %>
		</table>
		<%= render :partial => 'releases/releases_list', :locals => {:releases => album.download.releases} %>
		
	</div>
	<div class="span-3">
	<%= image_tag(album.image_url, :class => "span-3", :alt => "album art") if album.image_url %>
	</div>
	<%= render(:partial => "artists/artist_details", :locals => {:artist => album.artist}) %>
</div>



